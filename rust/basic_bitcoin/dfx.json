{
  "version": 1,
  "canisters": {
    "basic_bitcoin": {
      "type": "custom",
      "package": "basic_bitcoin",
      "candid": "src/basic_bitcoin/basic_bitcoin.did",
      "wasm": "target/wasm32-unknown-unknown/release/basic_bitcoin.wasm",
      "build": "src/basic_bitcoin/build.sh",
      "metadata": [
        {
          "name": "candid:service"
        }
      ]
    }
  },
  "defaults": {
    "bitcoin": {
      "enabled": true,
      "nodes": [
        "127.0.0.1:18444"
      ],
      "log_level": "info"
    },
    "build": {
      "packtool": "",
      "args": ""
    }
  },
  "networks": {
    "local": {
      "bind": "127.0.0.1:4943"
    }
  }
}
